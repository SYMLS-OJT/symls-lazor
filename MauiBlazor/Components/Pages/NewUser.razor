<script>
    function toggleMenu() {
        var menu = document.getElementById("menu");
        if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "block";
        } else {
            menu.style.display = "none";
        }

    }
    var toggleButton = document.getElementById("toggleButton");
    var toggleLabel = document.querySelector("label[for='toggleButton']");
    var toggleHandle = toggleLabel.querySelector("span");
    var minusButton = document.getElementById("minusButton");
    var plusButton = document.getElementById("plusButton");
    var minusButton1 = document.getElementById("minusButton1");
    var plusButton1 = document.getElementById("plusButton1");
    var salesDiv = document.getElementById("sales");

    toggleButton.addEventListener("click", function () {
        toggleLabel.classList.toggle("bg-blue-500");
        toggleHandle.classList.toggle(" translate-x-full");
        var opacityValue = toggleButton.checked ? 1 : 0.5;
        var buttons = [minusButton, plusButton, minusButton1, plusButton1];
        buttons.forEach(function (button) {
            salesDiv.style.opacity = opacityValue;
            button.disabled = !toggleButton.checked
        });

    });

    function toggleMenu() {
        var menu = document.getElementById("menu");
        menu.classList.toggle("hidden");
    }

    function accountSetting() {
        closeMenu();
    }

    function closeMenu() {
        var menu = document.getElementById("menu");
        menu.classList.add("hidden");
    }

    function userLevel() {
    }

    function openFileUploader() {
        document.getElementById('fileInput').click();
    }

    function previewImage(event) {
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onload = function (event) {
            const imageData = event.target.result;
            const imageElement = document.createElement('img');
            imageElement.src = imageData;
            imageElement.style.width = '100%';
            imageElement.style.height = '100%';
            imageElement.style.objectFit = 'cover';

            const imageDiv = document.getElementById('image');
            // Clear existing content before appending the new image
            imageDiv.innerHTML = '';
            imageDiv.appendChild(imageElement);
        };

        reader.readAsDataURL(file);
    }

</script>